<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <strong><%= f.label :username %></strong>
    <%= f.text_field :username, autofocus: true, autocomplete: "userame", required: true, placeholder: "User Name" %>
  </div>

  <div class="field">
    <strong><%= f.label :email %></strong>
    <%= f.email_field :email, autofocus: false, autocomplete: "email", required: true, placeholder: "Email" %>
  </div>

  <div class="field">
    <strong><%= f.label :role %></strong>
    <%= f.text_field :role, autofocus: false, autocomplete: "role", required: false, placeholder: "Role" %>
  </div>


  <div class="field">
    <strong><%= f.label :password %></strong>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
  </div>

  <div class="field">
    <strong><%= f.label :password_confirmation %></strong>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class: "btn btn-primary" %>
  </div>
<% end %>
<br><br>
<%= render "devise/shared/links" %>
