<h1>Content Providers</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Thumbnail image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_providers.each do |content_provider| %>
      <tr>
        <td><%= content_provider.name %></td>
        <td><%= content_provider.thumbnail_image %></td>
        <td><%= link_to 'Show', content_provider, class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_content_provider_path(content_provider), class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Delete', content_provider, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Content Provider', new_content_provider_path, class: "btn btn-primary" %>
