<%= form_with(model: zone) do |form| %>
  <% if zone.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(zone.errors.count, "error") %> prohibited this zone from being saved:</h2>

      <ul>
        <% zone.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong><%= form.label :name %></strong>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <strong><%= form.label :description %></strong>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <strong><%= form.label :content_rating %></strong>
    <%= form.select :content_rating, ContentRating.all.collect {|u| [u.rating]} %>
  </div>

  <div class="field">
    <strong><%= form.label :content_provider_id %></strong>
    <%= form.select :content_provider_id, ContentProvider.all.collect {|c| [c.name, c.id]} %>
  </div>

  <div class="actions">
    <%= form.submit  class: "btn btn-primary" %>
  </div>
<% end %>
