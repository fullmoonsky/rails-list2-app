<h1>Zone Detail</h1>
<br>
<p>
  <strong>Name:</strong>
  <%= @zone.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @zone.description %>
</p>

<p>
  <strong>Content rating:</strong>
  <%= @zone.content_rating %>
</p>

<p>
  <strong>Content provider:</strong>
  <% @zone.content_provider_id %>
  <% provider_id = @zone.content_provider_id %>
  <% provider = ContentProvider.find(provider_id ) %>
  <%= link_to provider.name, provider %>
</p>

<%= link_to 'Edit', edit_zone_path(@zone), class: "btn btn-outline-primary"  %> 
<%= link_to 'Back', zones_path, class: "btn btn-outline-primary"  %>
